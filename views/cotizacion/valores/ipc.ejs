<main class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-3">
            <label>Per√≠odo</label>
            <select id="periodoSelect" class="form-control">
                <% fechas.forEach(f=> { %>
                    <option value="<%= f.f_creacion ? f.f_creacion.toISOString().split('T')[0] : '' %>">
                        <%= f.f_creacion ? f.f_creacion.toISOString().split('T')[0] : '' %>
                    </option>
                    <% }) %>
            </select>
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button id="btnAgregarPeriodo" class="btn btn-secondary">Agregar periodo</button>
        </div>

    </div>
    <div class="row mb-3">
        <div class="col-md-2">
            <label>Valor</label>
            <input type="number" step="0.01" id="n_valor" class="form-control">
        </div>
        <div class="col-md-2">
            <label>Porcentaje</label>
            <input type="number" step="0.01" id="n_porcent" class="form-control">
        </div>
    </div>

    <div class="text-end mb-3">

        <button id="btnGuardar" class="btn btn-primary">Guardar</button>
    </div>
</main>