<main class="container mt-4">
    <div class="row mb-3">
        <div class="row g-3 align-items-end">
            <!-- Periodo -->
            <div class="col-md-3">
                <label>Filtrar pr fecha:</label>
                <select id="v_periodo" class="form-select">
                    <!-- <option value="">Seleccione...</option> -->
                    <% periodos.forEach(p=> { %>
                        <option value="<%= p.v_periodo.toISOString().split('T')[0] %>">
                            <%= p.v_periodo.toISOString().split('T')[0] %>
                        </option>
                        <% }) %>
                </select>
            </div>

            <!-- Moneda -->
            <div class="col-md-3">
                <label>Moneda</label>
                <select id="id_moneda" class="form-select">
                    <option value="">Seleccione...</option>
                    <% tipoMon.forEach(m=> { %>
                        <option value="<%= m.v_cod %>">
                            <%= m.v_nombre %>
                        </option>
                        <% }) %>
                </select>
            </div>

            <!-- Prestación -->
            <div class="col-md-3">
                <label>Prestación</label>
                <select id="id_prestacion" class="form-select">
                    <option value="">Seleccione...</option>
                    <% tipoPen.forEach(p=> { %>
                        <option value="<%= p.v_cod %>">
                            <%= p.v_nombre %>
                        </option>
                        <% }) %>
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button id="btnNuevoPer" class="btn btn btn-primary mt-3">Nuevo Periodo</button>
            </div>

        </div>

        <div class="row g-3 align-items-end mt-3">
            <!-- Valor -->
            <div class="col-md-3">
                <label>Valor</label>
                <input type="number" step="0.001" class="form-control" id="n_valor" placeholder="Ingrese valor">
            </div>
            <!-- Botones -->
            <div class="text-end mt-4">

                <!-- <button type="button" id="btnNuevo" class="btn btn-outline-secondary me-2">Nuevo</button> -->
                <button type="button" id="btnGuardar" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</main>